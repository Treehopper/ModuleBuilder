<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Sample Command"
            id="eu.hohenegger.modulebuilder.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="eu.hohenegger.modulebuilder.commands.sampleCommand"
            class="eu.hohenegger.modulebuilder.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="eu.hohenegger.modulebuilder.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="eu.hohenegger.modulebuilder.menus.sampleMenu">
            <command
                  commandId="eu.hohenegger.modulebuilder.commands.sampleCommand"
                  mnemonic="S"
                  id="eu.hohenegger.modulebuilder.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="eu.hohenegger.modulebuilder.toolbars.sampleToolbar">
            <command
                  commandId="eu.hohenegger.modulebuilder.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="eu.hohenegger.modulebuilder.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
